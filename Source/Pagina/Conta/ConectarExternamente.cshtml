@page
@model ConectarExternamenteModel
@{
    ViewData["Title"] = "Criar conta";
}

<div class="login-box-body">
    <p class="login-box-msg">Associe sua conta @Model.LoginProvider.</p>
    <p class="text-info">
        Você se autenticou com sucesso com <strong>@Model.LoginProvider</strong>.
        Digite um endereço de e-mail e clique no botão <strong>Criar</strong> para finalizar fazendo login.
</p>
    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="form-group has-feedback">
            <input asp-for="Input.Email" type="email" class="form-control" readonly placeholder="Email">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            <span asp-validation-for="Input.Email" class="help-block"></span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>

        <div class="row">
            <div class="col-xs-8">
                
            </div>
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Criar</button>
            </div>
        </div>
    </form>
</div>

@page
@model CriarContaModel
@{
    ViewData["Title"] = "Criar";
}
<div class="login-box-body">
    <p class="login-box-msg">Criar uma conta</p>
    <form method="post">
        <div class="form-group has-feedback">
            <input asp-for="Input.FullName" type="text" class="form-control" placeholder="Nome completo">
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
            <span asp-validation-for="Input.FullName" class="help-block"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            <span asp-validation-for="Input.Email" class="help-block"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Senha">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            <span asp-validation-for="Input.Password" class="help-block"></span>
        </div>
        <div class="form-group has-feedback">
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Repita a senha">
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            <span asp-validation-for="Input.ConfirmPassword" class="help-block"></span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="form-group has-feedback">
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input asp-for="Input.IsAgree" type="checkbox" required data-msg="Você deve concordar com os termos de registro."> Concordo com os <a href="#">termos</a>
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Criar</button>
                </div>
                <!-- /.col -->
            </div>
            <span asp-validation-for="Input.IsAgree" class="help-block"></span>
        </div>
    </form>

    <div class="social-auth-links text-center">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
            <i class="fa fa-facebook"></i> Criar usando o Facebook
        </a>
        <a href="#" class="btn btn-block btn-social btn-google btn-flat">
            <i class="fa fa-google-plus"></i> Criar usando Google+
        </a>
    </div>
            

    <a asp-page="./Conectar" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">Eu já tenho uma conta</a>
</div>

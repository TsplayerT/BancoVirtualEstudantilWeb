@page
@model Pagina500Model
@{
    ViewData["Title"] = "Página 500";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        500 Error Page
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Exemplos</a></li>
        <li class="active">Página 500</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="error-page">
        <h2 class="headline text-red">500</h2>

        <div class="error-content">
            <h3><i class="fa fa-warning text-red"></i> Opa! Algo deu errado.</h3>

            <p>
                Vamos trabalhar para consertar isso imediatamente.
                Enquanto isso, você pode <a href="../../index.html"> retornar ao painel </a> ou tentar usar o formulário de pesquisa.
            </p>

            <form class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Pesquisar">

                    <div class="input-group-btn">
                        <button type="submit" name="submit" class="btn btn-danger btn-flat">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
